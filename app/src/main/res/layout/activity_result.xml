<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp"
    tools:context=".activities.ResultActivity">

    <!-- ScrollView for smaller screens -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Congratulations/Failure Icon -->
            <TextView
                android:id="@+id/tv_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰"
                android:textSize="80sp"
                android:layout_marginTop="32dp" />

            <!-- Status Message -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSED âœ“"
                android:textColor="@color/correct_color"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <!-- Stars Rating -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­â­â­â­â­"
                android:textSize="48sp"
                android:layout_marginTop="16dp" />

            <!-- Score Circle Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_score"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="8dp"
                app:strokeWidth="4dp"
                app:strokeColor="@color/colorPrimary"
                android:layout_marginTop="32dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/colorPrimary">

                    <!-- Percentage Score -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:textColor="@color/white"
                        android:textSize="56sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:alpha="0.9" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Statistics Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginTop="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistics"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Total Questions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:padding="12dp"
                        android:background="@android:color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Questions"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_total_questions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Correct Answers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:padding="12dp"
                        android:background="@color/background">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Correct Answers"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_correct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/correct_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Wrong Answers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@android:color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Wrong Answers"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_wrong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/wrong_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp">

                <!-- Retry Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_retry"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="RETRY THIS LEVEL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_rotate"
                    app:iconGravity="textStart"
                    app:layout_constraintTop_toBottomOf="@id/card_stats" />

                <!-- Next Level Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_next_level"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="NEXT LEVEL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/easy_color"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconGravity="textStart"
                    android:layout_marginTop="12dp" />

                <!-- Home Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="GO TO HOME"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/medium_color"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_revert"
                    app:iconGravity="textStart"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
