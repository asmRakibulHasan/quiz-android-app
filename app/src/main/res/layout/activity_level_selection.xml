<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".activities.LevelSelectionActivity">

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â†"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/black"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Difficulty"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Easy Level Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_easy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/easy_color"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/easy_color"
                    android:backgroundTintMode="src_atop"
                    android:backgroundTint="@color/white">

                    <!-- Level Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/easy_color"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="EASY LEVEL"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŸ¢"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:alpha="0.3"
                        android:layout_marginBottom="12dp" />

                    <!-- Level Info -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Questions"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Computer Basics"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:alpha="0.7"
                        android:layout_marginBottom="12dp" />

                    <!-- Best Score -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_easy_best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best: N/A"
                        android:textColor="@color/easy_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Start Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_easy_start"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="START"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/easy_color"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconGravity="textEnd" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Medium Level Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/medium_color"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Level Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/medium_color"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="MEDIUM LEVEL"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŸ "
                            android:textSize="24sp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:alpha="0.3"
                        android:layout_marginBottom="12dp" />

                    <!-- Level Info -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Questions"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intermediate Knowledge"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:alpha="0.7"
                        android:layout_marginBottom="12dp" />

                    <!-- Best Score -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_medium_best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best: N/A"
                        android:textColor="@color/medium_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Start Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_medium_start"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="START"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/medium_color"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconGravity="textEnd" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hard Level Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_hard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/hard_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Level Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/hard_color"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="HARD LEVEL"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”´"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:alpha="0.3"
                        android:layout_marginBottom="12dp" />

                    <!-- Level Info -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 Questions"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advanced Topics"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:alpha="0.7"
                        android:layout_marginBottom="12dp" />

                    <!-- Best Score -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_hard_best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best: N/A"
                        android:textColor="@color/hard_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Start Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_hard_start"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="START"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/hard_color"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconGravity="textEnd" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
